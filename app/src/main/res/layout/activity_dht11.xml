        android:layout_marginTop="40dp"
        android:textColor="#FF5722"
        android:layout_centerHorizontal="true"
        android:id="@+id/t1"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_marginTop="80dp"
        android:layout_below="@+id/t1"
